{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
		"ignore": ["*.json", "android/**", "ios/**", "node_modules/**", ".expo/**"]
	}
}
